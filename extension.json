{
    "identifier": "dev.pdxcoder.astronova",
    "name": "AstroNova",
    "organization": "PdxCoder",
    "description": "A language extension for Astro files (.astro).",
    "version": "0.0.1",
    "categories": ["languages"],
    
    "main": "main.js",
    
    "entitlements": {
        "process": true,
        "filesystem": "readonly"
    },
    
    "config": [
        {
            "key": "example.language-server-path",
            "title": "Language Server Path",
            "type": "path",
            "placeholder": "/usr/local/bin/example"
        }
    ]
}
